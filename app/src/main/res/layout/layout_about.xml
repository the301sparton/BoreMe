<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activity_about">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:weightSum="4"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/josefin_sans"
                android:textSize="20sp"
                android:padding="15dp"
                android:textStyle="bold"
                android:text="Developed By"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:layout_margin="15dp"
                    android:src="@drawable/me_old" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/josefin_sans"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="Chaitanya Deshpande"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/git"
                            android:layout_marginLeft="25dp"
                            android:src="@drawable/github"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/lin"
                            android:layout_marginLeft="25dp"
                            android:src="@drawable/linkedin"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0" />


        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0" />






        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/josefin_sans"
                android:textSize="20sp"
                android:padding="15dp"
                android:textStyle="bold"
                android:text="T &amp; C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/josefin_sans"
                android:background="#eceff1"
                android:padding="15dp"
                android:textSize="18sp"
                android:text="Greetings!\nWe pinky promise not to collect or store any data from your device in this or any future versions of this App."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/josefin_sans"
                    android:textSize="24sp"
                    android:padding="15dp"
                    android:textStyle="bold"
                    android:text="Credits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e0" />


                <TextView
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/josefin_sans"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:text="Team Everynote\n(Scheduler Algorithm)"/>





                <TextView
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/josefin_sans"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:text="Josefin Sans (font)"/>


                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e0" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>